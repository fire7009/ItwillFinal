<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.js.pjt.mapper.OrderMapper">
	<update id="deleteOrder">
		update order1 set ord_cncl_yn=0, ord_cncl_dttm=sysdate where ord_no=#{ordNo}
	</update>
	<select id="selectCustOrder" resultType="com.js.pjt.vo.OrderVO">
		select * from order1 where ORD_CUSTNM=#{ordCustNm}
	</select>
	<select id="selectProdOrder" resultType="com.js.pjt.vo.OrderVO">
		select * from order1 where ORD_PRODNM=#{ordProdNm}
	</select>
	<select id="selectAndOrder" resultType="com.js.pjt.vo.OrderVO">
		select * from order1 where ORD_PRODNM=#{ordProdNm} and ORD_CUSTNM=#{ordCustNm} 
	</select>
	<select id="selectOrder" resultType="com.js.pjt.vo.OrderVO">
		select * from order1 where ORD_PRODNM=#{ordProdNm} or ORD_CUSTNM=#{ordCustNm} 
	</select>
	<select id="selectOrderList" resultType="com.js.pjt.vo.OrderVO">
		select * from order1 order by ord_no desc
	</select>
</mapper>